---
export type TCollectionCard = {
  imageSrc: string;
  collectionURL: string;
  collectionTitle: string;
};

export interface Props extends TCollectionCard {}

const { collectionURL, collectionTitle, imageSrc } = Astro.props;
---

<a href={collectionURL}>
  <article class="collectionCard">
    <img class="collectionCard__img" src={imageSrc} alt={collectionTitle} />

    <div>
      <h4 class="collectionCard__title">{collectionTitle}</h4>
    </div>
  </article>
</a>

<style>
  a {
    width: min-content;
  }

  .collectionCard {
    width: max-content;

    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;

    align-self: center;
    justify-self: center;
    padding: 1rem;
    margin: 0;

    background-color: var(--secondary-color);
    color: #f6f6f6;
    margin: 0;
    border-radius: 5px;
  }

  .collectionCard__img {
    width: 200px;
    height: 200px;

    border-radius: 5px;
  }

  .collectionCard__title {
    text-align: center;
    margin: 1rem auto;
  }
</style>
